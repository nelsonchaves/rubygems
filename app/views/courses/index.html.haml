%h1
  Courses:
  = @courses.count

.row
  .col-md-2
    .form-inline
      = search_form_for @q do |f|
        = f.search_field :title_cont, placeholder: 'Title'
        = f.search_field :short_description_count, placeholder: 'Description'
        = f.search_field :language_cont, placeholder: 'Language'
        = f.search_field :level_cont, placeholder: 'Level'
        = f.search_field :price_eq, placeholder: 'Price'
        = f.submit

    .ml-2
      = link_to users_path, class: 'btn btn-sm btn-secondary' do
        .fa.fa-sync
  .col-md-10
    .card-columns
      - @courses.each do |course|
        = render 'courses/course', course: course

%br
